@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div>
    <div>
        <section>
            <form id="account" method="post">
                <h2>Use a local account.</h2>
                <div id="login-error" asp-validation-summary="ModelOnly" role="alert"></div>
                <div>
                    <label id="login-email" asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email"></span>
                </div>
                <div>
                    <label id="login-pass" asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div>
                    <label asp-for="Input.RememberMe">
                        <div class="remember-me">
                            <input asp-for="Input.RememberMe" />
                            <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </div>
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit">Log in</button>
                </div>
