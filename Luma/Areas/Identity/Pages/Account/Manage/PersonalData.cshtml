@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="manage-container">
    <h3>@ViewData["Title"]</h3>
    <div class="personal-data-content">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data. <strong>Deleting this data will permanently remove your account, and this cannot be recovered.<br/></strong></p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
