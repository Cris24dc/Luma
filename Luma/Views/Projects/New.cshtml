@model Luma.Models.Project

@{
    ViewBag.Title = "Add Project";
}

<div id="new-project-con">
    <h2 class="page-title">Add Project</h2>

    <form method="post" asp-action="New" asp-controller="Projects">
        <div class="form-group">
            <label asp-for="Project_Name" class="form-label">Project Name</label>
            <input asp-for="Project_Name" class="form-input" />
            <span asp-validation-for="Project_Name" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <button type="submit">Add Project</button>
            <a asp-controller="Projects" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
