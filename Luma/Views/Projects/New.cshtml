@model Luma.Models.Project


<h2 class="text-center mt-5">Add project</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" asp-controller="Projects">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Project_Name" class="form-label">Project Name</label>
                    <br />
                    <input asp-for="Project_Name" class="form-control" />

                    <span asp-validation-for="Project_Name" class="text-danger"></span>
                    <br /><br />
                </div>

                <button class="btn btn-success" type="submit">Add Project</button>
                <a class="btn btn-secondary" asp-controller="Projects" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
