@model Luma.Models.Project

@{
    ViewBag.Title = "Edit Project";
}

<div id="edit-project-con">
    <h2 class="page-title">Edit Project</h2>

    <form method="post" asp-action="Edit" asp-controller="Projects" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Project_Name" class="form-label">Project Name</label>
            <input asp-for="Project_Name" class="form-input" />
            <span asp-validation-for="Project_Name" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <button type="submit">Modify Project</button>
            <a href="@Url.Action("Index", "Tasks", new { projectId = Model.Id })">Cancel</a>
        </div>
    </form>
</div>
